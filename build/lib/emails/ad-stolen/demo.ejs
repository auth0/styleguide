<mjml>
  <mj-head>
    <mj-attributes>

      <mj-class name="subtitle" font-size="26px" color="#212121" padding="0 20px 15px 20px" margin="0" line-height="40" />
      <mj-text align="center" color="#222228" font-family="'Avenir Next', Avenir, sans-serif" line-height="30" font-size="16px" />
      <mj-list color="#222228" font-family="'Avenir Next', Avenir, sans-serif" line-height="30px" font-size="16px" />
      <mj-button font-family="'Avenir Next', Avenir, sans-serif" background-color="#EB5424" font-size="12px" color="white" font-weight="500" padding="14px 20px" />

      <mj-class name="body-text" padding="0 20px 15px 20px" align="left" />
    </mj-attributes>
  </mj-head>
  <mj-body>
    <mj-container background-color="#E3E5E7">
      <mj-section background-color="white">
        <mj-column width="100%" vertical-align="top">
          <mj-image width="80" src="http://cdn.auth0.com/styleguide/latest/lib/logos/img/logo-blue.png" href="https://auth0.com/" alt="auth0"></mj-image>
        </mj-column>
      </mj-section>

      <mj-section background-color="#222228">
        <mj-column width="80%" vertical-align="top">

          <mj-image width="80" src="https://cdn.auth0.com/email/anomaly-detection/ninja.png" alt="Zero To Launch" padding-top="30px"></mj-image>





          <mj-text color="white" font-size="20px" padding="0 20px 30px 20px">
            We have detected suspicious activity on your Auth0 account <strong style='font-weight: 500;'>Foobar</strong>.
          </mj-text>




        </mj-column>
      </mj-section>


      <mj-section background-color="white">
        <mj-column width="80%" vertical-align="top">
          <mj-text>
            There have been an excessive number of failed login attempts from the following IP addresses:
          </mj-text>
        </mj-column>
      </mj-section>

      <mj-section background-color="white" padding="0 60px 40px 60px">
        <mj-column width="100%" vertical-align="top" background-color="#FAFAFA">
          <mj-text align="center" color="#777" font-size="25px" padding="20px 20px 0 20px">
            200.22.222.112
          </mj-text>

          <mj-text align="center" color="#999" padding="0 0 25px 0">
            <img src="https://cdn.auth0.com/email/anomaly-detection/location.png" width="10" style="margin-right: 4px; margin-top: -4px;">Buenos Aires, Argentina
          </mj-text>
        </mj-column>

        <mj-column width="50%" vertical-align="top" background-color="#44C7F4" padding="0">
          <mj-button href="#logs-link" background-color="none" padding="15px 40px">
            <img src="https://cdn.auth0.com/email/anomaly-detection/diagnose.png" alt="diagnose" width="28px">
            <div>Diagnose</div>
          </mj-button>
        </mj-column>

        <mj-column width="50%" vertical-align="top" background-color="#EB5424">
          <mj-button href="#anomaly-link" background-color="none" padding="15px 40px">
            <img src="https://cdn.auth0.com/email/anomaly-detection/block.png" alt="block" width="20px">
            <div>Block</div>
          </mj-button>
        </mj-column>
      </mj-section>


      <mj-section background-color="#F5F7F9">
        <mj-column width="100%" vertical-align="top">
          <mj-text font-size="13px" padding="0 20px 0 20px" line-height="20px">
            You’re receiving this email because you have an Auth0 account. If you are not sure why you’re receiving this, please contact us through our <a href="//support.auth0.com/" style="color:#0a84ae;text-decoration:none">Support Center</a>.
          </mj-text>
        </mj-column>
      </mj-section>
      <mj-container>
  </mj-body>
</mjml>
