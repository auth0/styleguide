<mjml>
  <mj-head>
    <mj-attributes>

      <mj-class name="subtitle" font-size="26px" color="#212121" padding="0 20px 15px 20px" margin="0" line-height="40" />
      <mj-text align="center" color="#222228" font-family="'Avenir Next', Avenir, sans-serif" line-height="30" font-size="16px" />
      <mj-list color="#222228" font-family="'Avenir Next', Avenir, sans-serif" line-height="30px" font-size="16px" />
      <mj-button font-family="'Avenir Next', Avenir, sans-serif" background-color="#EB5424" font-size="12px" color="white" font-weight="500" padding="14px 20px" />
      <mj-table font-family="'Avenir Next', Avenir, sans-serif" padding="20px" />

    </mj-attributes>
  </mj-head>
  <mj-body>
    <mj-container background-color="#E3E5E7">
      <mj-section background-color="white">
        <mj-column width="100%" vertical-align="top">
          <mj-image width="80" src="http://cdn.auth0.com/styleguide/latest/lib/logos/img/logo-blue.png" href="https://auth0.com/" alt="auth0"></mj-image>
        </mj-column>
      </mj-section>

      <mj-section background-color="#222228">
        <mj-column width="80%" vertical-align="top">

          <mj-image width="80" src="https://cdn.auth0.com/website/email-templates/product/assets/top-verification.svg" alt="Zero To Launch" padding-top="30px"></mj-image>



          <mj-text font-size="32px" line-height="60" color="white" padding="0 20px 0 20px" margin="0">
            Sign in to Your App
          </mj-text>








        </mj-column>
      </mj-section>


      <mj-section background-color="white" padding="40px 40px 0">
        <mj-column width="100%" padding="20px" border-left="#E3E5E7 1px solid" border-right="#E3E5E7 1px solid" border-top="#E3E5E7 1px solid" padding-bottom="20px" padding-top="20px">


          <mj-text align="left" font-weight="500" font-size="18px" padding="20px 20px 0 20px">
            Confirm that you want to sign in to Your App. This link will expire in five minutes.
          </mj-text>


          <mj-table>

            <tr style="text-align:left; font-size: 16px;">

              <td style="padding: 0 15px 10px 0; vertical-align: text-top;">
                <strong style="font-weight: 500; white-space: nowrap;">Verification Code</strong>
              </td>


              <td style="padding: 0 0 10px 15px; vertical-align: text-top;">0303456</td>

            </tr>

            <tr style="text-align:left; font-size: 16px;">

              <td style="padding: 0 15px 0 0; vertical-align: text-top;">
                <strong style="font-weight: 500; white-space: nowrap;">URL</strong>
              </td>


              <td style="padding: 0 0 0 15px; vertical-align: text-top;"><a href='#'>https://myapp.auth0.com/sign_in…</a>
              </td>

            </tr>

          </mj-table>
        </mj-column>

        <mj-divider border-width="1px" border-color="#E3E5E7" />


        <mj-column width="100%" style="padding: 20px 0;" border-left="#E3E5E7 1px solid" border-right="#E3E5E7 1px solid" border-bottom="#E3E5E7 1px solid">
          <mj-button href="#verify" style="padding: 20px 0;">
            SIGN IN TO YOUR APP
          </mj-button>
        </mj-column>

      </mj-section>


      <mj-section background-color="white">
        <mj-column width="100%" vertical-align="top">
          <mj-text align="left" padding="0 40px 15px 40px">
            If you are having any issues with your account, please don't hesitate to contact us by replying to this mail.
            <br>Thanks!
          </mj-text>
        </mj-column>
      </mj-section>

      <mj-section background-color="#F5F7F9">
        <mj-column width="100%" vertical-align="top">
          <mj-text font-size="13px" padding="0 60px 0 60px" line-height="20px">
            You’re receiving this email because you have and Auth0 account.If you’d rather not see us in your inbox in the future <a href="{{unsubscribe_url}}" style="color:#0a84ae;text-decoration:none">unsubscribe</a>.
          </mj-text>
        </mj-column>
      </mj-section>
      <mj-container>
  </mj-body>
</mjml>
