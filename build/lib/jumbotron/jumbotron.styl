.jumbotron
  padding: padding-vertical-large padding-horizontal-small
  margin-bottom: padding-vertical-small
  color: color-text-contrast
  background-color: bg-color-dark
  text-align: center

  +breakpoint("desktop")
    margin-bottom: padding-vertical

  h1,
  .h1
    color: color-text-contrast
    margin: 1.5rem 0

  h2,
  .h2
    background-color: color-text-contrast
    border-radius: 50%
    display: block
    margin: 0 auto
    overflow: hidden
    width: 100px
    height: 100px
    position: relative

    img
      position: absolute
      display: block
      top: 50%
      left: 50%
      transform: translate(-50%, -50%)

  p
    color: color-text-contrast-light
    margin-bottom: (padding-vertical / 2)
    font-weight: font-weight-normal
    max-width 600px
    margin 0 auto
    font-size 16px
    padding: 0 20px

  +breakpoint("tablet")
    padding: ceil(padding-vertical * 1.6) 0

    h1,
    .h1
      font-size: (font-size * 2.5)
