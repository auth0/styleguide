/*==========  Breadcrumb  ==========*/
.breadcrumb
  padding: 14px 20px;
  border-radius: 3px;
  margin-bottom: 40px;
  overflow: hidden
  background-color: color_blue;
  background: linear-gradient(120deg, darken(color_red, 40%) 0%, color_blue 100%); /* W3C */

  ul
    padding: 0;
    margin: 0;
    li
      float: left
      display: inline-block
      color: white;
      font-weight: bold
      font-size: 12px;
      padding: 0;
      margin: 0;
      margin-right: 10px;
      a
        color: white;


    &.external-links
      float: right;
      li
        margin-right: 0;
        margin-left: 20px;
        a
          opacity: .6;
          &:hover
            opacity: 1;



/*==========  Quotes  ==========*/
.quotes
  text-align: center
  padding: 20px 0;
  position: relative;
  blockquote
    border: 0;
    padding-left: 0;
    margin-bottom: 0;
    opacity: 0;
    display: none
    width: 100%;
    padding-left: 10%;
    padding-right: 10%;
    position: absolute;
    -webkit-transition: all 0.3s ease;
    -moz-transition: all 0.3s ease;
    -ms-transition: all 0.3s ease;
    -o-transition: all 0.3s ease;
    transition: all 0.3s ease;
    z-index: 0;

    p
      font-size: 24px;
      font-weight: 100;
      line-height: 40px;
      font-style: italic
      color: #333;

    author
      font-weight: bold
      font-size: 13px;
      margin-bottom: 10px;
      display: inline-block

    &.active
      opacity: 1;
      display: block
  img
    border-radius: 100px;
    width: 48px;
    margin: 0 10px;
    opacity: .4;
    cursor: pointer;

    &.active
      opacity: 1;


/*==========  Tip  ==========*/

.tip
  font-size: 14px;
  a
    font-weight: bold
    color: white;
    border-color: white !important;
  .tip-inner
    max-width: 300px;



/*==========  Header  ==========*/
header.site-header
  padding: 20px 0 20px 0;
  // position: absolute;
  left: 0;
  right: 0;
  top: 0;
  z-index: 1000;
  background: white;
  &.header-fixed
    background: rgba(255,255,255,.8);
    position: fixed;

  nav 
    background: none;
    border: 0;
    margin: 0;

    ul, li
      margin: 0;


    .navbar-brand 
      font-weight: bold
      margin: 0;
      display: inline-block
      float: left
      font-size: 24px;
      margin-right: 20px;
      color: black;
      padding: 0 15px 0 15px;
      width: 140px;
      margin: 0;

   
      a
        background: url('data:image/svg+xml;base64,') center left no-repeat; 
        background-size: contain;
        margin-top: 4px;
        width: 130px;
        height: 40px;
        display: block

      img
        position: relative;
        height: 36px;
        // width: 114px;
        margin-right: 10px;
        top: 2px;
        display: none
    
      span 
        display: none
    a 
      color: #333;

    a.login
      margin-left: 20px;
      font-weight: bold

    a.signup   
      color: #666
      border: 1px solid #f1f1f1;
      padding-left: 16px;
      padding-right: 14px
      border-radius: 3px;
      margin-left: 10px;
      padding-bottom: 0;
      padding-top: 0;
      line-height: 40px;
      margin-top: 4px;
      &:hover 
        background: #f1f1f1;




  .navbar-default .navbar-collapse
    border-color: transparent;

    li.active a
      background: none !important;
      color: black !important

  .navbar-toggle
    border: 0;
    &:hover 
      background: none;
      .icon-bar
        background: black; 



body.dark-layout
  header.site-header
    background: black;

    h1.navbar-brand
      a
        background-image: url('/auth0-styleguide/img/logo-grey-horizontal.png')
    a 
      color: #999;
      &:hover 
        color: white;

    a.btn 
      border-color: #666;
      &:hover 
        border-color: white;
        color: black;  

  

@media screen and (max-width: 768px)
  header.site-header
    padding-top: 0;
    padding-bottom: 0;
    .navbar-brand
      margin-bottom: 20px
    .navbar-nav 
      margin: 0 ;
      padding: 0;
      a 
        padding-left: 5px
        padding-right: 5px;

      a.login
        margin-left: 0;
        // padding-left: 0;
      a.signup
        margin-top: 10px
        margin-bottom: 20px;
        padding-left: 0;
        padding-right: 0;
        margin-left: 5px;
        margin-right: 5px;
        display: block;


/*==========  Footer  ==========*/
footer.site-footer
  margin-top: 10px;
  margin-bottom: 10px;
  font-size: 12px;
  padding: 20px 0;
  color: #999;
  nav 
    text-align: right
    float: right
    li 
      display: inline-block
      margin-left: 30px;
  a 
    color: #999;

  .col-md-11
    float: right

@media screen and (max-width: 768px)
  footer.site-footer
    .col-md-11
      float: none;
    nav 
      float: none;
      display: block
      clear:both;
      text-align: left;
      margin: 0;
      padding: 0;
      margin-bottom: 14px;
      ul 
        margin: 0;
        border-bottom: 1px solid #f1f1f1;

        padding: 0;
      li
        display: block
        margin: 0;
      a 
        display: block
        border-top: 1px solid #f1f1f1;
        margin: 0;
        padding: 14px 0;



/*==========  Banner  ==========*/

.banner
  color: white;
  text-align: center
  padding-top: 60px;
  padding-bottom: 60px;
  margin-bottom: 50px;
  position: relative;
  overflow: hidden
  background-color: #14204d;
  background: rgb(20,32,77); /* Old browsers */
  background: -moz-linear-gradient(120deg,  rgba(20,32,77,1) 0%, rgba(60,200,244,1) 100%); /* FF3.6+ */
  background: -webkit-gradient(linear, left bottom, right top, color-stop(0%,rgba(20,32,77,1)), color-stop(100%,rgba(60,200,244,1))); /* Chrome,Safari4+ */
  background: -webkit-linear-gradient(120deg,  rgba(20,32,77,1) 0%,rgba(60,200,244,1) 100%); /* Chrome10+,Safari5.1+ */
  background: -o-linear-gradient(120deg,  rgba(20,32,77,1) 0%,rgba(60,200,244,1) 100%); /* Opera 11.10+ */
  background: -ms-linear-gradient(120deg,  rgba(20,32,77,1) 0%,rgba(60,200,244,1) 100%); /* IE10+ */
  background: linear-gradient(120deg,  rgba(20,32,77,1) 0%,rgba(60,200,244,1) 100%); /* W3C */

  h1
    font-size: 270%;
    // margin-top: 0;
    color: white;
  p
    font-size: 120%;
    max-width: 580px;
    margin: auto;
    margin-top: 20px;
    line-height: 170%;
    color: rgba(255,255,255,.8);


  i
    font-size: 50px;
    -webkit-animation: icon_banner 1s;
    position: relative;

  .btn
    margin-top: 10px;

  em
    display: block
    font-size: 12px;
    margin-top: 4px;
    letter-spacing: 1px;


@keyframes icon_banner
  from
    top: -100px;
    opacity: 0;
  to
    opacity: 1;
    top: 0;


@media screen and (max-width: 660px)
  .banner
    padding: 20px 0;
    h1
      font-size: 36px


/*==========  Sidebar Box  ==========*/
.sidebar-box
  max-width: 230px;
  border: 1px solid #eee;
  border-radius: 3px;
  margin-bottom: 20px;
  padding: 14px 20px;
  list-style: none;

  strong
    text-transform: uppercase
    font-weight: bold;
    font-size: 12px;
    margin-bottom: 6px;
    display: block
    letter-spacing: 1px;
    color: #999;

  ul
    padding: 0;
    margin: 0;

    list-style: none;

    a
      color: #666;

      &:hover
        color: black;

    li
      line-height: 28px;
      margin: 0;

      li 
        margin: 0;

      i:before
        content: "\e16f";
        font-family: "budicon-font" !important;
        speak: none;
      i
        width: 10px;
        height: 10px;
        display: inline-block
        font-family: "budicon-font" !important;
        font-style: normal !important;
        font-weight: normal !important;
        font-variant: normal !important;
        text-transform: none !important;
        speak: none;
        line-height: 1;
        margin-right: 8px;
        position: relative;
        top: 2px;
        height: 14px;
        // background: red;

      &.selected
        a
          color: black !important;
          // font-weight: bold;



