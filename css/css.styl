/*==========  Typography  ==========*/
html 
  font-size: 16px;

body 
  font-size: 16px;
  -webkit-font-smoothing: antialiased;
  -moz-font-smoothing: antialiased;
  font-family: "proxima-nova", "Helvetica Neue", sans-serif;
  color: #4d4d4d;

h1,h2,h3,h4,h5
  line-height: 1.5;

h1 
  font-size: 2.250rem;

h2
  font-size: 2rem;

h3
  font-size: 1.5rem;


h1,h2,h3,h4,h5,h6
  font-family: "proxima-nova", "Helvetica Neue", sans-serif;
  color: black;
  a 
    color: black;
    font-weight: 300;
    &:hover 
      color: darken(color_blue_light, 60%);

h1,h2,h3
  font-weight: 100;
  a 
    font-weight: 100;


h4,h5,h6
  font-weight: bold
  a
    font-weight: bold


h5.styled
  border-bottom: 1px solid #333;
  text-transform: uppercase
  padding-bottom: 10px;
  letter-spacing: 1px;
  font-size: 13px;
  a
    color: black;
    font-weight: bold


p 
  line-height: 1.8;

a
  color: darken(color_blue_light, 40%);

  &:focus
    outline: 0;

  &:hover
    text-decoration: none
    color: darken(color_blue_light, 80%);

pre
  border: 0;

h1,h2,h3,h4,h5, p, li, pre
  margin: 20px 0;

h1:first-child
  margin-top: 0;

nav
  ul 
    margin: 0;
    li 
      padding: 0;
      margin: 0;

/*==========  Buttons  ==========*/
.btn, a.btn
  -webkit-transition: background-color 0.2s ease;
  -moz-transition: background-color 0.2s ease;
  -ms-transition: background-color 0.2s ease;
  -o-transition: background-color 0.2s ease;
  transition: background-color 0.2s ease;
  text-transform: uppercase
  font-size: 16px;
  letter-spacing: 2px;
  border: 0;
  font-weight: bold
  border: 1px solid color_grey;
  padding-left: 15px;
  padding-right: 15px;
  border-radius: 3px;

  &:hover 
    // background-color: color_grey;

  &.btn-none
    border: 0;
    text-transform: none
    letter-spacing: 0;
    padding-left: 20px;
    padding-right: 20px;


  &.btn-xs
    font-size: 11px;
    line-height: 12px;
    padding: 6px 15px;

  &.btn-sm
    font-size: 12px;
    line-height: 12px;
    padding: 10px 15px;

  &.btn-lg
    line-height: 30px;
    padding-left: 20px;
    padding-right: 20px;
    font-size: 15px;

  &.btn-success
    background-color: color_red;
    color: #fff;
    border: 0;
    &:hover
      background-color: darken(color_red, 30%);
      color: #fff

  &.btn-default
    background: white;
    border-color: color_grey;
    &:hover
      background: color_grey;

  &.btn-danger
    border: 0;

  &.btn-primary 
    background-color: color_blue_light;
    border: 0;
    &:hover 
      background-color: darken(color_blue_light, 30%);


  &:active
    box-shadow: none;


.bg-primary, .bg-success, .bg-danger, .bg-info, .bg-warning
  font-weight: bold
  color: white;
  border-radius: 3px;
  padding: 10px 14px;

.bg-primary
  background: color_blue;

.bg-success
  background: color_green;

.bg-warning
  background: color_yellow;

.bg-info 
  background-color: color_blue_light;

.bg-danger
  background: color_red_alt;


.glyphs.css-mapping{color:rgba(0,0,0,0.5); padding: 0; margin: 0;}
.glyphs.css-mapping li{margin:0 20px 20px 0;padding:0;display:inline-block;overflow:hidden}
.glyphs.css-mapping .icon{margin:0;margin-right:10px;padding:13px;height:50px;width:50px;color:#162a36 !important;overflow:hidden;float:left;font-size:24px}
.glyphs.css-mapping input{margin:0;margin-top:5px;padding:8px;line-height:16px;font-size:16px;display:block;width:100px;height:40px;border:1px solid #d8e0e5;-webkit-border-radius:5px;border-radius:5px;background:#fff;outline:0;float:right;}
.glyphs.css-mapping input:focus{border:1px solid #fbde4a;-webkit-box-shadow:inset 0 0 3px #fbde4a;box-shadow:inset 0 0 3px #fbde4a}
.glyphs.css-mapping input:hover{-webkit-box-shadow:inset 0 0 3px #fbde4a;box-shadow:inset 0 0 3px #fbde4a}