.bg-grey
  border-top: 1px solid #f1f1f1;
  border-bottom: 1px solid #f1f1f1;
  background: none;

.container.spacing-content
  padding-top:  80px  ;
  padding-bottom: 80px;


.help-circle
  max-height: 14px;
  max-width: 14px;
  opacity: .2;
  margin-left: 4px;
  position: relative;
  top: -2px;

  &:hover
      opacity: 1;

section.section
  margin-bottom: 80px;

span.icon-badge
  background: color_grey;
  width: 60px;
  height: 60px;
  border-radius: 3px;
  display: inline-block
  color: color_red;
  font-size: 30px;
  line-height: 72px;

.narrow-content
  max-width: 680px;
  margin: auto;
  text-align: center;
  font-size: 120%;
  p
    color: #666;
  ul
    padding-left: 0;
    &.ul-inline
      margin: 20px 0;
      li
        background: url('/homepage/img/icon-checkmark.png') left 4px no-repeat;
        display: inline-block
        padding-left: 30px;
        margin: 0 20px;

    &.ul-large
      text-align: left;

    li
      margin-bottom: 20px;
      background: url('/homepage/img/icon-checkmark.png') left 4px no-repeat;
      padding-left: 30px;
      list-style: none;




