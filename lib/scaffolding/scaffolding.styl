//
// Scaffolding
// --------------------------------------------------

$font-family-base = "avenir-next-web", Avenir, "Helvetica Neue", Hevetica, sans-serif;
$font-family-code = "Roboto Mono", Menlo, Monaco, monospace;
$font-size-base = 14px;
$line-height-base = 1.5;

// Body reset

html {
  font-size: $font-size-base;
}

body {
  font-family: $font-family-base;
  font-size: inherit;
  line-height: $line-height-base;
  color: #000;
}

// Links

a {
  color: #333;

  &:hover {
    color: darken($link-color, 80%);
    text-decoration: none;
  }

  &:focus {
    outline: none;
    text-decoration: none;
  }
}
