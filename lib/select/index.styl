.select
  display: inline-block;
  vertical-align: top;
  position: relative;
  cursor: pointer;
  height: 35px;
  line-height: 35px;
  padding: 0 15px;
  padding-right: 25px;
  cursor: pointer;
  background: #e6e6e6;
  border-radius: 3px;

  > span
    display: inline-block;
    overflow: hidden;

  .value
    max-width: 110px;
    margin-left: 4px;

  i
    position: absolute;
    right: 8px;
    top: 14px;
    font-size: 12px;
    opacity: 0.7;

  select
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    -webkit-appearance: none;
