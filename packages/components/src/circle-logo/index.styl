rel_width = 8em;

.circle-logo
  display: inline-block;
  text-align: center;
  font-size: $font-size-base;
  width: rel_width;
  transition: transform 100ms cubic-bezier(0.455, 0.03, 0.515, 0.955);

  &:hover
    text-decoration: none;
    transform: scale(1.05);

    .logo
      opacity: 0.9;

  .logo
    position: relative;
    height: rel_width;
    width: rel_width;
    background: #EAEEF3;
    color: #333;
    border-radius: 50%;

    &:before,
    &:after
      position: absolute;
      top: 50%;
      left: 50%;
      width: 50%;
      transform: translate(-50%, -50%);
      font-size: 3em;

    &:after
      content: "";
      display: block;
      background-size: contain;
      background-position: center center;
      background-repeat: no-repeat;
      width: 50%;
      height: 50%;

  .title
    color: #333;
    font-weight: $font-weight-bold;
    margin: 10px 0;
    min-height: 3em;

