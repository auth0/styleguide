$inter-cdn-base ?= 'https://cdn.auth0.com/styleguide/core/3.1.0/fonts/inter'

// Inter Light (300)
@font-face
  font-family: 'Inter'
  src: url($inter-cdn-base + '/Inter-Light.ttf') format('truetype')
  font-weight: 300
  font-style: normal
  font-display: swap

// Inter Regular (400)
@font-face
  font-family: 'Inter'
  src: url($inter-cdn-base + '/Inter-Regular.ttf') format('truetype')
  font-weight: 400
  font-style: normal
  font-display: swap

// Inter Medium (500)
@font-face
  font-family: 'Inter'
  src: url($inter-cdn-base + '/Inter-Medium.ttf') format('truetype')
  font-weight: 500
  font-style: normal
  font-display: swap

// Inter SemiBold (600)
@font-face
  font-family: 'Inter'
  src: url($inter-cdn-base + '/Inter-SemiBold.ttf') format('truetype')
  font-weight: 600
  font-style: normal
  font-display: swap
