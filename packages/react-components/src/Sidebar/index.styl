$sidebar-width = 250px
$sidebar-background-color = rgba(black, 0.1)

.a0r-sidebar
	width: $sidebar-width;
	background-color: $sidebar-background-color;
	height: 100vh;
	overflow-y: auto;

	> .a0r-sidebar-header
		background-color: white;
		overflow: hidden;
		text-align: center;
		position: relative;

		h1
			margin: 15px 0;
	
	> .a0r-sidebar-menu

		.menu-list
			list-style: none;
			margin: 0;
			padding: 0;
			z-index: 5;
			position: relative;
			background: #e3e5e7;

		.menu-item
			color: #5c666f;
			font-size: $font-size-micro;
			font-weight: $font-weight-bold;
			letter-spacing: 1px;
			text-transform: uppercase;

			&.active
				color: #333 !important;
				background: darken(#e3e5e7, 4%);

		.menu-item-link
			border-bottom: 1px solid rgba(0, 0, 0, .08);
			color: #5c666f;
			display: block;
			padding: 20px 20px 20px 20px;
			line-height: normal;

    .menu-item-icon
			margin-right: 10px;
			position: relative;
			min-width: 14px;
			display: inline-block;
			top: 0.2em;

		.menu-sublist
			list-style: none;
			margin: 0;
			padding: 0;
			display: none;

			+breakpoint("tablet")
				display: inherit;

		.menu-subitem	
			background-color: rgba(255, 255, 255, .3);
			margin: 1px 0 0 0;

			&:first-child
				margin-top: 0;

    .menu-subitem-link
			background-color: rgba(255, 255, 255, .3);
			color: inherit;
			display: block;
			padding: 10px 0 10px 40px;
			text-transform: none;
			letter-spacing: 0;
