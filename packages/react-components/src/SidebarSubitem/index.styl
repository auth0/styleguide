.a0r-sidebar-menu-subitem {
  background-color: rgba(255, 255, 255, .3);
  margin: 1px 0 0 0;
  list-style: none;

  &:first-child {
    margin-top: 0;
  }
}

.a0r-sidebar-menu-subitem .menu-subitem-link {
  background-color: rgba(255, 255, 255, .3);
  color: inherit;
  display: block;
  padding: 10px 0 10px 40px;
  text-transform: none;
  letter-spacing: 0;
  cursor: pointer;

  &:hover,
  &.active {
    color: $gray-dark;
  }

  &.active {
    background: rgba(black, 0.01);
  }
}
