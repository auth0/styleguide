@import "auth0-styleguide-core/src/vars/"
@import "auth0-styleguide-core/src/mixins/"

$sidebar-width = 280px;

.sidebar
  background-color white

  +breakpoint("desktop", "max")
    position relative

  +breakpoint("desktop")
    position fixed
    top 0
    left 0
    bottom 0
    height 100%
    width $sidebar-width
    overflow-y auto

  .sidebar-header
    padding 15px 0
    position relative

    +breakpoint("desktop")
      padding 30px 0

  .sidebar-badge
    display block
    margin 0 auto
    max-width 30px
    min-height 16px

  .sidebar-title
    display none
    font-size 12px
    text-transform uppercase
    letter-spacing 1px
    margin-bottom 0
    padding-bottom 30px
    text-align center

    +breakpoint("desktop")
      display block

  .sidebar-toggle-nav
    position absolute
    top 50%
    right 18px
    padding 8px
    transform translateY(-50%)
    box-shadow none
    border none
    background-color transparent

    .icon-bar
      display block
      width 22px
      height 2px
      border-radius 1px
      background: $color-oil

      & + .icon-bar
        margin-top 4px

    +breakpoint("desktop")
      display none

  .sidebar-items-list
    list-style-type none
    margin 0 0 63px
    padding 0

    +breakpoint("desktop", "max")
      height 0
      overflow-y hidden

      &.open
        height auto

  .sidebar-item
    border-bottom 1px solid rgba(0, 0, 0, 0.05)

    &:first-child
      border-top 1px solid rgba(0, 0, 0, 0.05)

  .sidebar-item-link
    display block
    color black
    padding 12px 24px
    font-size 14px

    &.active
      background-color $brand-success
      color white

  .sidebar-version
    background #fff
    position fixed
    bottom 0
    left 0
    width $sidebar-width
    font-size 11px
    color gray
    letter-spacing 1px
    text-align center
    padding 20px 0
    border-top 1px solid rgba(0, 0, 0, 0.05)

    +breakpoint("desktop", "max")
      display none
