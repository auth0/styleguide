@import "../../../../core/vars/"

.sidebar
  width 280px
  background-color white
  position absolute
  top 0
  left 0
  bottom 0

  .sidebar-badge
    display block
    margin 0 auto
    margin-top 30px
    max-width 30px
    min-height 16px

  .sidebar-title
    font-size 12px
    text-transform uppercase
    letter-spacing 1px
    margin-bottom 30px
    text-align center

  .sidebar-items-list
    list-style-type none
    margin 0
    padding 0

  .sidebar-item
    border-bottom 1px solid rgba(0, 0, 0, 0.05)

    &:first-child
      border-top 1px solid rgba(0, 0, 0, 0.05)

  .sidebar-item-link
    display block
    color black
    padding 12px 16px
    font-size 14px

    &.active
      background-color $brand-success
      color white

  .sidebar-version
    display block
    position absolute
    bottom 0
    left 0
    right 0
    font-size 11px
    color gray
    letter-spacing 1px
    text-align center
    padding 20px 0
    border-top 1px solid rgba(0, 0, 0, 0.05)
