@import 'auth0-styleguide-core/src/vars'
@import 'auth0-styleguide-core/src/mixins'

.html-example

  .html-example-actions
    margin: 30px 0 10px;
    padding: 0;
    list-style-type: none;
    display: flex;

    li
      display: inline-block;

      .btn
        letter-spacing: 0;
        text-transform: none;

        &.active
          color $gray-darker

      &:first-child .btn
        padding-left: 0;

      &:last-child
        margin-left: auto;

        .btn
          padding-right: 0;

      .open-in-stage-btn
        overflow: visible;

        i
          margin-left: 10px;
          position: relative;
          top: 2px;
          left: 0;
          transition: left 0.1s ease-in-out;

        &:hover i
          left: 5px;

  .html-example-playground

    .example-component
      padding: 30px;
      overflow: hidden;
      border-radius: 3px;
      box-shadow: 0 0 20px rgba(0,0,0,0.1);
