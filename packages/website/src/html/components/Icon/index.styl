@import 'auth0-styleguide-core/src/vars';
@import 'auth0-styleguide-core/src/mixins';

.icon-showcase
  background: $bg-color-gray
  padding: 10px;
  border-radius: $border-radius-base;
  display: flex;
  align-items: center;
  margin-bottom: 20px;
  height: 72px;

  .icon
    font-size: 24px;
    padding: 0 13px;
    margin-right: 4px;

    &:before
      vertical-align: middle;
      line-height: inherit;

  .icon-content
    color: rgba(0,0,0,0.5);

    .name,
    .css-class
      display: block;
      line-height: 1.5em;

    .name
      font-weight: $font-weight-bold;
