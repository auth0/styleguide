@import '../../../../../core/src/vars'
@import '../../../../../core/src/mixins'

.auth0-html-styleguide

  .a0r-sidebar
    position: fixed;

  .styleguide-content
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    overflow-y: auto;
    margin-top: 70px;

    +breakpoint("tablet")
      margin-top: 0;
      margin-left: 250px; 

    .jumbotron
      margin-bottom 0

      h2 svg
        max-width: 48px;

    .section-content
      > section
        padding: 32px;
        border-bottom: 1px solid #e3e5e7;

        +breakpoint("tablet")
          padding: 32px 90px 64px;

      h2
        margin-top: 0;
        padding-top: 32px;