@import 'auth0-styleguide-core/src/vars'
@import 'auth0-styleguide-core/src/mixins'

.react-playground
  margin-bottom 60px

  .react-playground-title
    font-size 22px

  .react-playground-component
    width 100%
    min-height 140px
    position relative
    background-color white
    border 1px solid #EDEDED
    border-bottom 0
    border-top-left-radius 3px
    border-top-right-radius 3px

    &.center
      display flex
      justify-content center
      align-items center

    .component-links
      position absolute
      top -50px
      right 0

  .react-playground-component-iframe
    overflow hidden

  .react-playground-code
    position relative

    .copy-code-btn
      position absolute
      top 20px
      right 20px
      z-index 1

    code
      padding 24px
      border-radius 0
      border-bottom-left-radius 3px
      border-bottom-right-radius 3px

    pre
      margin-bottom 0
      overflow-x auto
