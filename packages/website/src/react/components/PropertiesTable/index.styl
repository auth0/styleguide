@import 'auth0-styleguide-core/src/vars'
@import 'auth0-styleguide-core/src/mixins'

.component-properties-table-container {
  background: #fff;
  border-radius: 3px;
  border: 1px solid #eee;
}

.component-properties-table {
  table-layout: fixed;
}

.component-properties-table.table > thead > tr > th {
  padding: 24px;
  color: #222;
  font-size: 15px;
  font-weight: 500;
  border-bottom: 0;
}

.component-properties-table.table > tbody > tr > td {
  padding: 12px 24px;
  color: #444;
}

.component-properties-table.table > tbody > tr > td.required::after {
  content: ' *';
  color: #eb5424;
}

.component-properties .required-message {
  color: #7f7f7f;
  margin-top: 5px;

  &::before {
    content: '*';
    color: #eb5424;
    margin-right: 5px;
  }
}
